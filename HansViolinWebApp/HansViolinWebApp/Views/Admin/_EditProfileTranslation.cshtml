@model HansViolinWebApp.Models.BusinessDetail


<div class="modal fade" id="editProfile">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editProfileLabel">修改关于简介翻译</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="EditProfile">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="About" />
                            <input type="hidden" asp-for="ImageLink" />
                            <div class="form-group">
                                <label asp-for="AboutZh" class="control-label">关于</label>
                                <textarea rows="15" asp-for="AboutZh" class="form-control">@Model.AboutZh</textarea>
                                <span asp-validation-for="AboutZh" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="Phone" />
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="Address" />
                            <input type="hidden" asp-for="Postcode" />
                            <input type="hidden" asp-for="Twitter" />
                            <input type="hidden" asp-for="Facebook" />
                            <input type="hidden" asp-for="Instagram" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>
