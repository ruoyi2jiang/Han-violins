@model HansViolinWebApp.Models.Category

<div class="modal fade" id="editCategoryTranslation">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editCategoryLabel">修改分类翻译</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="EditCategory" id="form-content" asp-route-id="@Model.CategoryId">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CategoryId" />
                            <input type="hidden" asp-for="CategoryName" />
                            <input type="hidden" asp-for="Description" />
                            <input type="hidden" asp-for="PathName" />
                            <input type="hidden" asp-for="CoverUrl" />
                            <div class="form-group">
                                <label asp-for="CategoryNameZh" class="control-label">中文名</label>
                                <input asp-for="CategoryNameZh" class="form-control" />
                                <span asp-validation-for="CategoryNameZh" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DescriptionZh" class="control-label">简介（可不填）</label>
                                <textarea rows="3" asp-for="DescriptionZh" class="form-control">@Model.DescriptionZh</textarea>
                                <span asp-validation-for="DescriptionZh" class="text-danger"></span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>

