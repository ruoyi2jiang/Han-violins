@model HansViolinWebApp.Models.News

@{
    ViewData["Title"] = "Edit Post";
    Layout = "~/Views/Shared/_admLayout.cshtml";
}

    <div id="header-bg" class="header-visible"></div>


    <div class="container title-padding">
        <h2>修改翻译</h2>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="EditPost" asp-route-id="@Model.Id">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Title" />
                    <input type="hidden" asp-for="Content" />
                    <div class="form-group">
                        <label asp-for="TitleZh" class="control-label">标题</label>
                        <input asp-for="TitleZh" class="form-control" />
                        <span asp-validation-for="TitleZh" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContentZh" class="control-label">HTML内容</label>
                        <textarea rows="30" asp-for="ContentZh" class="form-control">@Model.ContentZh</textarea>
                        <span asp-validation-for="ContentZh" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="CreatedDate" />
                    <input type="hidden" asp-for="PublishedDate" />
                    <input type="hidden" asp-for="IsPublished" />
                    <div class="form-group d-flex justify-content-center">
                        <span class="mr-2">
                            <a asp-action="NewsPreview" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                        </span>
                        <span>
                            <input type="submit" value="Save" class="btn btn-primary" />

                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>


