@model HansViolinWebApp.Models.Item

<div class="modal fade" id="editItem">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editItemLabel">Edit Instrument</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="EditItem">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ItemId" />
                            <input type="hidden" asp-for="CategoryId" />
                            <input type="hidden" asp-for="CoverUrl" />
                            <input type="hidden" asp-for="CoverId" />
                            <input type="hidden" asp-for="ItemNameZh" />
                            <input type="hidden" asp-for="OriginInfoZh" />
                            <input type="hidden" asp-for="DescriptionZh" />
                            <input type="hidden" asp-for="SoldinfoZh" />
                            <input type="hidden" asp-for="CategoryName" />

                            <div class="form-group">
                                <label asp-for="ItemName" class="control-label">Name</label>
                                <input asp-for="ItemName" class="form-control" />
                                <span asp-validation-for="ItemName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea rows="5" asp-for="Description" class="form-control">@Model.Description</textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PriceRange" class="control-label">Price Range</label>
                                <input asp-for="PriceRange" class="form-control" />
                                <span asp-validation-for="PriceRange" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OriginInfo" class="control-label">Origin/Time info</label>
                                <input asp-for="OriginInfo" class="form-control" />
                                <span asp-validation-for="OriginInfo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SoldInfo" class="control-label">Notable Sale Info</label>
                                <input asp-for="SoldInfo" class="form-control" />
                                <span asp-validation-for="SoldInfo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status" class="control-label"></label>
                                <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                            </div>
                            <input type="hidden" asp-for="DateAdded" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>


