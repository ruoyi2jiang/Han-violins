@model HansViolinWebApp.Models.Image

<div class="modal fade" id="addImage">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addImageLabel">Add Image</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="CreateImage">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <span>@Model.Item.ItemName</span>
                            </div>
                            <input type="hidden" asp-for="ItemId" />
                            <div class="form-group">
                                <label asp-for="Url" class="control-label">Url*</label>
                                <input asp-for="Url" class="form-control" />
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="SequenceNumber" />
                            *Required<br />
                            <span>Note: Images are displayed in the order of creation!</span>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-save="modal">Add</button>
            </div>
        </div>
    </div>
</div>

