@model HansViolinWebApp.Models.Item

<div class="modal fade" id="editItem">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="editItemLabel">修改乐器信息翻译</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="EditItem" asp-route-id="@Model.ItemId">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ItemId" />
                            <input type="hidden" asp-for="CategoryId" />
                            <input type="hidden" asp-for="CategoryName" />
                            <input type="hidden" asp-for="ItemName" />
                            <input type="hidden" asp-for="OriginInfo" />
                            <input type="hidden" asp-for="Description" />
                            <input type="hidden" asp-for="PriceRange" />
                            <input type="hidden" asp-for="CoverId" />
                            <input type="hidden" asp-for="CoverUrl" />
                            <input type="hidden" asp-for="SoldInfo" />
                            <input type="hidden" asp-for="Status" />

                            <div class="form-group">
                                <label asp-for="ItemNameZh" class="control-label">中文名</label>
                                <input asp-for="ItemNameZh" class="form-control" />
                                <span asp-validation-for="ItemNameZh" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DescriptionZh" class="control-label">简介</label>
                                <textarea rows="5" asp-for="DescriptionZh" class="form-control">@Model.DescriptionZh</textarea>
                                <span asp-validation-for="DescriptionZh" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OriginInfoZh" class="control-label">其他信息</label>
                                <input asp-for="OriginInfoZh" class="form-control" />
                                <span asp-validation-for="OriginInfoZh" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SoldinfoZh" class="control-label">卖出信息</label>
                                <input asp-for="SoldinfoZh" class="form-control" />
                                <span asp-validation-for="SoldinfoZh" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="DateAdded" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>


