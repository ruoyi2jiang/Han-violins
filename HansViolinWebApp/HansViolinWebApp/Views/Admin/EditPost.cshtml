@model HansViolinWebApp.Models.News

@{
    ViewData["Title"] = "Edit Post";
    Layout = "~/Views/Shared/_admLayout.cshtml";
}

    <div id="header-bg" class="header-visible"></div>


    <div class="container title-padding">
        <h2>Edit a post</h2>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="EditPost">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="TitleZh" />
                    <input type="hidden" asp-for="ContentZh" />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content" class="control-label">HTML</label>
                        <textarea rows="30" asp-for="Content" class="form-control">@Model.Content</textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="CreatedDate" />
                    <input type="hidden" asp-for="PublishedDate" />
                    <input type="hidden" asp-for="IsPublished" />
                    <div class="form-group d-flex justify-content-center">
                        <span class="mr-2">
                            <a asp-action="NewsPreview" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                        </span>
                        <span>
                            <input type="submit" value="Save & Preview" class="btn btn-primary" />

                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>


